{% extends "baseadmin.html.twig" %}

{% block body %}
    
     <h1>Page d'administration des catégories<br /><br /></h1>
     
    <table class="table table-striped">   
        <caption>Vous trouverez ici toutes les catégories de formation</caption>
        
        <thead>
                <tr>
                    <th class="text-left align-top" scope="col">
                         Catégories<br />
                       
                    </th>
                </tr>
        </thead>    
        <tbody>
            {% for categorie in categories %}
                <tr class="align-middle">
                    <td>
                        <h5 class="text-info">
                            {{ categorie.name }}
                        </h5>
                    </td>  
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

